$color-main-theme = #1C4281
$color-light-accent = #C4D6F0
$color-medium-accent = #445B85
$color-dark-accent = #344356
$color-text-accent = #EEE
$color-text-dark = #000
$color-light-neutral-accent = #DDD
$color-medium-neutral-accent = #AAA
$color-dark-neutral-accent = #888

html,
body,
.AppContainer {
    margin:             0;
    padding:            0;
    height:             100%;
}

.AppContainer {
    padding-left: 250px;
    transition: all 0.4s ease 0s;
}

.sidebar {
    margin-left: -250px;
    left: 250px;
    width: 250px;
    background: $color-medium-accent;
    color: $color-text-accent;
    position: fixed;
    height: 100%;
    overflow-y: auto;
    z-index: 1000;
    transition: all 0.4s ease 0s;
}

.content {
    width: 100%;
}

@media (max-width:767px) {

    .AppContainer {
        padding-left: 0;
    }

    .sidebar {
        left: 0;
    }

    .AppContainer.active {
        position: relative;
        left: 250px;
    }

    .AppContainer.active .sidebar {
        left: 250px;
        width: 250px;
        transition: all 0.4s ease 0s;
    }
}
