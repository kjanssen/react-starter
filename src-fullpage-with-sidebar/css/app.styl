
$color-main-theme = #1C4281
$color-light-accent = #C4D6F0
$color-medium-accent = #445B85
$color-dark-accent = #344356
$color-text-accent = #EEE
$color-text-dark = #000
$color-light-neutral-accent = #DDD
$color-medium-neutral-accent = #AAA
$color-dark-neutral-accent = #888

$width-sidebar = 250px

@import "vendor/bootstrap.css"

// Uncomment this to include any .styl files in the components directory.
// This is a convenient place to put component specific CSS
//
// @require "components/**/*"

html,
body,
.AppContainer {
    margin:             0;
    padding:            0;
    height:             100%;
}

.AppContainer {
    padding-left: $width-sidebar;
    transition: all 0.4s ease 0s;
}

.sidebar {
    margin-left: -($width-sidebar);
    left: $width-sidebar;
    width: $width-sidebar;
    background: $color-medium-accent;
    color: $color-text-accent;
    position: fixed;
    height: 100%;
    overflow-y: auto;
    z-index: 1000;
    transition: all 0.4s ease 0s;
}

.content {
    width: 100%;
}

@media (max-width:767px) {

    .AppContainer {
        padding-left: 0;
    }

    .sidebar {
        left: 0;
    }

    .AppContainer.active {
        position: relative;
        left: $width-sidebar;
    }

    .AppContainer.active .sidebar {
        left: $width-sidebar;
        width: $width-sidebar;
        transition: all 0.4s ease 0s;
    }
}
